# EwayAuto Environment Configuration
# Copy this file to .env and update with your actual values

# FastAPI Configuration
DEBUG=true
SECRET_KEY=your-secret-key-here-generate-a-secure-random-string
HOST=127.0.0.1
PORT=8000

# Database Configuration
DATABASE_URL=sqlite:///./data/ewayauto.db

# EWay Portal Configuration
EWAY_URL=https://ewaybillgst.gov.in/
EWAY_USERNAME=your_eway_username
EWAY_PASSWORD=your_eway_password

# Browser Configuration
HEADLESS=false
BROWSER_TIMEOUT=30000
SCREENSHOT_ON_ERROR=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/ewayauto.log
ERROR_LOG_FILE=logs/errors.log

# Session Configuration
SESSION_TIMEOUT=3600
AUTO_REFRESH_MINUTES=30

# CAPTCHA Configuration
CAPTCHA_RETRY_ATTEMPTS=3
CAPTCHA_TIMEOUT=60

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=csv,xlsx,xls

# Rate Limiting
REQUESTS_PER_MINUTE=10
BULK_PROCESSING_DELAY=2

# Backup Configuration
AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=30